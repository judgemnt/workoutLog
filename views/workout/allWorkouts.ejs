<% layout("layouts/boilerplate")%>
    <div><a href="/programs">programs</a></div>
    <div>
        <h1>
            <%=program.title%>
        </h1>
        <div>
            <%=program.description%>
        </div>
        <div>
            <a href="/programs/<%=program._id%>/edit"><button>Edit Program</button></a>
        </div>
    </div>
    <div>
        <h2>Workouts</h2>
        <%for (let w=0; w < allWorkouts.workouts.length; w ++) {%>
            <div>
                <form action="/programs/<%=allWorkouts.workouts[0].program%>/workouts?_method=DELETE" method="POST">
                    <div>
                        <label for="workouts[workout]">
                            <a href="/programs/<%=allWorkouts._id%>/workouts/<%=allWorkouts.workouts[w]._id%>">
                                <%= allWorkouts.workouts[w].session%>
                            </a>
                        </label>
                        <input type="checkbox" name="workouts[workout]" id="workouts[workout]"
                            value="<%=allWorkouts.workouts[w]._id%>">
                    </div>
                    <div>
                        <textarea class="form-control" name="program[description]" id="program[description]" cols="60"
                            rows="3" readonly><%=allWorkouts.workouts[w].description%></textarea>
                    </div>
                    <% } %>
                        <button>Delete Selected</button>
                </form>
            </div>
            <a href="/programs/<%=allWorkouts._id%>/workouts/edit"><button>Edit Workouts</button></a>
            <div>
                <h2>Add Workouts</h2>
                <form action="/programs/<%=allWorkouts._id%>" method="POST">
                    <div>
                        <label for="workouts[session]">Session Title</label>
                        <input type="text" name="workouts[session]" id="workouts[session]">
                    </div>
                    <div>
                        <label for="workouts[description]">Description</label>
                        <textarea name="workouts[description]" id="workouts[description]" cols="30" rows="2"></textarea>
                    </div>
                    <button>Submit</button>
                </form>
            </div>
    </div>