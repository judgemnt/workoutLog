<% layout("layouts/boilerplate")%>
    <h1>All Programs</h1>
    <div>
        <% for (let p of programs) {%>
            <form action="/programs?_method=DELETE" method="POST">
                <div>
                    <label for="program[_id]">
                        <a href="/programs/<%=p._id%>/workouts">
                            <%= p.title %>
                        </a>
                    </label>
                    <br>
                    <textarea class="form-control" name="program[description]" id="program[description]" cols="60"
                        rows="3" readonly><%=p.description%></textarea>
                </div>
                <button name="program[_id]" id="program[_id]" value="<%=p._id%>">Delete Program</button>
            </form>
            <% } %>
    </div>